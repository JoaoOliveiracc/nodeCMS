<%- include("../../partials/header.ejs") %>
<%- include("../../partials/homeNav.ejs") %>

<body>
    <div class="container">
        <% result.articles.rows.forEach(article => { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Visualizar</a>
                </div>
            </div>
        <% }) %>

        <div class="row justify-content-end mt-1">
            <div class="col">
                <% if(result.page > 2) { %>
                    <a style="float: left;" class="btn btn-primary" href="/articles/pag/<%= result.page - 1 %>"><<< Prev</a>
                <% } else if(result.page == 2 && result.page > 1) { %>
                    <a style="float: left;" class="btn btn-primary" href="/articles/pag/<%= result.page - 1 %>"><<< Prev</a>
                <% } %>
            </div>
            <% if(result.next) { %>
                <div>
                    <a style="float: right;" class="btn btn-primary" href="/articles/pag/<%= result.page + 1 %>">Next >>></a>
                </div>
            <% } %>
        </div>
    </div>
</body>

<%- include("../../partials/footer.ejs") %>