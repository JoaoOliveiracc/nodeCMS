<%- include("partials/header.ejs") %>
<%- include("partials/homeNav.ejs") %>

<body>
    <div class="container">
        <div class="mt-3" style="background-color:#e9ecef; padding: 2%;">
            <h1 class="display-4">Bem-vindo</h1>
            <p class="lead">Esse é o NODE CMS!</p>
            <hr class="my-4">
            <p>Descrição aqui!</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
        </div>
        <% articles.forEach(article => { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Visualizar</a>
                </div>
            </div>
        <% }) %>

        <div class="row justify-content-end mt-1">
            <div class="col-1">
                <a href="">Próximo >></a>
            </div>
        </div>
    </div>
</body>

